
{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",

        "uid": {
          ".validate": "newData.isString() && newData.val() === auth.uid"
        },
        "email": {
          ".validate": "newData.isString() || newData.val() === null"
        },
        "displayName": {
          ".validate": "newData.isString() || newData.val() === null"
        },
        "photoURL": {
          ".validate": "newData.isString() || newData.val() === null"
        },
        "providerId": {
          ".validate": "newData.isString() || newData.val() === null"
        },

        "phoneNumber": {
          ".validate": "newData.isString() || newData.val() === null"
        },
        "phoneVerified": {
          ".validate": "newData.isBoolean() && newData.val() === false"
        },
        "role": {
          ".validate": "newData.isString() && (newData.val() === 'user' || newData.val() === 'pizzaiolo')"
        },

        "loyaltyPoints": {
          ".validate": "newData.isNumber()"
        },
        "totalSpentCents": {
          ".validate": "newData.isNumber()"
        },
        "address": {
          ".validate": "newData.hasChildren()"
        },

        "createdAt": {
          ".validate": "(!data.exists() && (newData.isNumber() || newData.child('.sv').val() === 'timestamp')) || (data.exists() && newData.val() === data.val())"
        },
        "updatedAt": {
          ".validate": "newData.isNumber() || newData.child('.sv').val() === 'timestamp'"
        }
      }
    },
    "public": {
      "trucks": {
        ".read": true,
        "$truckId": {
          ".write": "auth != null"
        }
      }
    },
    "pizzaiolos": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "trucks": {
      ".read": true,
      "$truckId": {
        ".write": "auth != null && ((data.exists() && data.child('ownerUid').val() === auth.uid) || (!data.exists() && newData.child('ownerUid').val() === auth.uid))"
      }
    },
    "menus": {
      ".read": true,
      "$truckId": {
        ".write": "auth != null && root.child('trucks').child($truckId).child('ownerUid').val() === auth.uid"
      }
    },
    "orders": {
      ".read": "auth != null",
      "$orderId": {
        ".read": "auth != null && (data.child('userUid').val() === auth.uid || root.child('pizzaiolos').child(auth.uid).child('truckId').val() === data.child('truckId').val())",
        ".write": "auth != null && ((!data.exists() && newData.child('userUid').val() === auth.uid) || (data.exists() && root.child('pizzaiolos').child(auth.uid).child('truckId').val() === data.child('truckId').val()))"
      },
      ".indexOn": ["userUid", "truckId", "status", "nextStepAt"]
    },
    "carts": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        "active": {
          ".validate": "!newData.exists() || (newData.hasChildren(['items', 'expiresAt']) && newData.child('expiresAt').isNumber() && newData.child('expiresAt').val() <= now + 24 * 60 * 60 * 1000 && (newData.child('truckId').val() === null || newData.child('truckId').isString()))"
        }
      }
    },
    "cartsArchive": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": false,
        ".indexOn": ["archivedAt"]
      }
    },
    "truckOrders": {
      "$truckId": {
        ".read": "auth != null && root.child('trucks').child($truckId).child('ownerUid').val() === auth.uid",
        ".write": false
      }
    }
  }
}
